<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".monthBottom">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_margin="5dp"
            android:clickable="false"
            app:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Against last month:"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/darkmain" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/darkmain" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="0dp"
                        android:layout_marginLeft="10dp"
                        android:text="So far, you've spent less time on your phone and have been more active! You haven't been to as many different locations as the prior month though, which may be linked to your higher level of stress."
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/mostStress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Most Stress"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/yellow" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/yellow" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/location"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginVertical="0dp"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:src="@drawable/location"
                             />

                        <TextView
                            android:id="@+id/locationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="14dp"
                            android:text="2 locations"
                            android:textColor="@color/yellow" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/heart"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginVertical="0dp"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:src="@drawable/heart"
                             />

                        <TextView
                            android:id="@+id/heartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="14dp"
                            android:text="11 spikes"
                            android:textColor="@color/yellow" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/screen"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginVertical="0dp"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:src="@drawable/screentime"
                             />

                        <TextView
                            android:id="@+id/screenText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="14dp"
                            android:text="High"
                            android:textColor="@color/yellow" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/walking"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginVertical="0dp"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:src="@drawable/walking"
                             />

                        <TextView
                            android:id="@+id/walkingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textSize="14dp"
                            android:text="2 km"
                            android:textColor="@color/yellow" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
