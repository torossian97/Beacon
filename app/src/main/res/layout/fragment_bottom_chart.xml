<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomChart">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:background="#00ffffff">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_margin="5dp"
            android:clickable="false"
            app:cardBackgroundColor="#ffffff"
            android:layout_weight=".5">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="5dp"
                android:text="Peak Stress"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/lightgray" />

        <!-- One bar chart-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="0dp"
                    android:layout_marginLeft="5dp"
                    android:padding="0dp"
                    android:src="@drawable/location"
                    android:tint="@color/darkmain2" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:layout_width="275dp"
                android:layout_height="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:rcBackgroundColor="@color/lightgray"
                app:rcBackgroundPadding="0dp"
                app:rcMax="150"
                app:rcProgress="50"
                app:rcProgressColor="@color/darkmainop2"
                app:rcRadius="15dp"
                app:rcReverse="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:text="Travel"
                    android:textColor="@android:color/darker_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="Low"
                    android:textColor="@color/darkmainop2" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!-- end of bar -->

                <!-- One bar chart-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginLeft="5dp"
                        android:padding="0dp"
                        android:src="@drawable/heart"
                        android:tint="@color/darkmain1" />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_width="275dp"
                            android:layout_height="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            app:rcBackgroundColor="@color/lightgray"
                            app:rcBackgroundPadding="0dp"
                            app:rcMax="150"
                            app:rcProgress="90"
                            app:rcProgressColor="@color/darkmainop"
                            app:rcRadius="15dp"
                            app:rcReverse="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="0dp"
                            android:layout_marginLeft="10dp"
                            android:text="Heart Rate"
                            android:textColor="@android:color/darker_gray" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:text="Moderate"
                        android:textColor="@color/darkmainop" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <!-- end of bar -->

                <!-- One bar chart-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="0dp"
                        android:layout_marginLeft="5dp"
                        android:padding="0dp"
                        android:src="@drawable/screentime"
                        android:tint="@color/darkmain" />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_width="275dp"
                            android:layout_height="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            app:rcBackgroundColor="@color/lightgray"
                            app:rcBackgroundPadding="0dp"
                            app:rcMax="150"
                            app:rcProgress="50"
                            app:rcProgressColor="@color/darkmain"
                            app:rcRadius="15dp"
                            app:rcReverse="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="0dp"
                            android:layout_marginLeft="10dp"
                            android:text="Screen Usage"
                            android:textColor="@android:color/darker_gray" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:text="Very Low"
                        android:textColor="@color/darkmain" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <!-- end of bar -->
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
